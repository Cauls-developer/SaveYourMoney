{
  "name": "saveyourmoney-frontend",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win nsis"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.saveyourmoney.desktop",
    "productName": "SaveYourMoney",
    "asar": true,
    "files": [
      "**/*",
      "!node_modules/.cache/**"
    ],
    "extraResources": [
      {
        "from": "update-config.json",
        "to": "update-config.json"
      },
      {
        "from": "../backend/SaveYourMoney-Backend.exe",
        "to": "backend/SaveYourMoney-Backend.exe"
      },
      {
        "from": "../backend/__init__.py",
        "to": "backend/__init__.py"
      },
      {
        "from": "../backend/app.py",
        "to": "backend/app.py"
      },
      {
        "from": "../backend/errors.py",
        "to": "backend/errors.py"
      },
      {
        "from": "../backend/state.py",
        "to": "backend/state.py"
      },
      {
        "from": "../backend/domain",
        "to": "backend/domain"
      },
      {
        "from": "../backend/repositories",
        "to": "backend/repositories"
      },
      {
        "from": "../backend/routes",
        "to": "backend/routes"
      },
      {
        "from": "../backend/schemas",
        "to": "backend/schemas"
      },
      {
        "from": "../backend/services",
        "to": "backend/services"
      },
      {
        "from": "../backend/use_cases",
        "to": "backend/use_cases"
      }
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
